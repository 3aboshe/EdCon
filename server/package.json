{
  "name": "edcon-backend",
  "version": "1.0.0",
  "description": "EdCon Backend API with MongoDB",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "npm run deploy && node server.js",
    "dev": "nodemon server.js",
    "build": "prisma generate",
    "deploy": "prisma migrate deploy || prisma db push",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "nanoid": "^5.1.5",
    "prisma": "^6.13.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
